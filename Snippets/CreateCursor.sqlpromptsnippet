        </Literal>
      </Declarations>
      <Code Language="sql"><![CDATA[DECLARE $variable1$ $data_type1$,
		$variable2$ $data_type2$;					/* Declare All Required Variables */

DECLARE $cursor_name$ CURSOR						/* Declare Cursor Name */
--[LOCAL | GLOBAL]								/* Define Cursor Scope */
--[FORWARD_ONLY | SCROLL]						/* Define Movement Direction of Cursor */
--[KEYSET | DYNAMIC | STATIC | FAST_FORWARD]	/* Define Basic Type of Cursor */
--[SCROLL_LOCKS | OPTIMISTIC | READ_ONLY]		/* Define Locks */
FOR
(
	SELECT $col1$, $col2$
	FROM $schema_name$.$table_name$
	WHERE 1 = 1
);

OPEN $cursor_name$;											/* Open Cursor */

FETCH NEXT FROM $cursor_name$ INTO $variable1$, $variable2$;		/* Fetch Data From Cursor */

WHILE @@FETCH_STATUS = 0
BEGIN

	SELECT $variable1$, $variable2$;

	FETCH NEXT FROM $cursor_name$ INTO $variable1$, $variable2$;	/* Fetch Next Data From Cursor */

END;

CLOSE $cursor_name$;											/* Close The Cursor */
DEALLOCATE $cursor_name$;										/* DeAllocate all Resources and Memory */  ]]></Code>
