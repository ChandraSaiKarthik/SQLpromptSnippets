          <ID>ArchiveID</ID>
          <ToolTip />
          <Default>1</Default>
        </Literal>
        <Literal>
          <ID>LogFileType</ID>
          <ToolTip />
          <Default>1</Default>
        </Literal>
        <Literal>
          <ID>Filter1Text</ID>
          <ToolTip />
          <Default />
        </Literal>
        <Literal>
          <ID>Filter2Text</ID>
          <ToolTip />
          <Default />
        </Literal>
        <Literal>
          <ID>FirstEntry</ID>
          <ToolTip />
          <Default />
        </Literal>
        <Literal>
          <ID>LastEntry</ID>
